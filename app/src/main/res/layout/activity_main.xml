<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".aioui.main.MainActivity">

    <data>

        <import type="com.goldze.mvvmhabit.R" />

        <variable
            name="viewModel"
            type="com.goldze.mvvmhabit.aioui.main.MainViewModel" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F0F0F0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180px"
            android:background="@color/white"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                binding:onClickCommand="@{viewModel.showIntroduce}">

                <ImageView
                    android:layout_width="64px"
                    android:layout_height="64px"
                    android:src="@drawable/introduce"
                    binding:checkRes="@{R.drawable.jieshao_blue}"
                    binding:garyRes="@{R.drawable.introduce}"
                    binding:realState="@{viewModel.showState}"
                    binding:stateType="@{0}" />

                <TextView
                    android:textSize="32px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="机构介绍"
                    android:textColor="@color/textGray"
                    binding:realState="@{viewModel.showState}"
                    binding:stateType="@{0}" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                binding:onClickCommand="@{viewModel.showMain}">

                <ImageView
                    android:layout_width="64px"
                    android:layout_height="64px"
                    android:src="@drawable/home"
                    binding:checkRes="@{R.drawable.home}"
                    binding:garyRes="@{R.drawable.home_gary}"
                    binding:realState="@{viewModel.showState}"
                    binding:stateType="@{1}" />

                <TextView
                    android:textSize="32px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="首页"
                    android:textColor="@color/app_blue"
                    binding:realState="@{viewModel.showState}"
                    binding:stateType="@{1}" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                binding:onClickCommand="@{viewModel.showSupport}">

                <ImageView
                    android:layout_width="64px"
                    android:layout_height="64px"
                    android:src="@drawable/support"
                    binding:checkRes="@{R.drawable.support_blue}"
                    binding:garyRes="@{R.drawable.support}"
                    binding:realState="@{viewModel.showState}"
                    binding:stateType="@{2}" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="技术支持"
                    android:textSize="32px"
                    android:textColor="@color/textGray"
                    binding:realState="@{viewModel.showState}"
                    binding:stateType="@{2}" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>