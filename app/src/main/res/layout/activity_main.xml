<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".aioui.main.MainActivity">

    <data>

        <import type="com.goldze.mvvmhabit.R" />

        <variable
            name="viewModel"
            type="com.goldze.mvvmhabit.aioui.main.MainViewModel" />
    </data>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="188px"
            android:layout_gravity="bottom"
            android:background="#2e000000"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                binding:onClickCommand="@{viewModel.showIntroduce}">

                <ImageView
                    android:layout_width="64px"
                    android:layout_height="64px"
                    android:src="@drawable/gary_js"
                    binding:checkRes="@{R.drawable.light_js}"
                    binding:garyRes="@{R.drawable.gary_js}"
                    binding:realState="@{viewModel.showState}"
                    binding:stateType="@{0}" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="项目介绍"
                    android:textColor="#F7F7F7"
                    android:textSize="32px"
                    binding:realState="@{viewModel.showState}"
                    binding:stateType="@{0}" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                binding:onClickCommand="@{viewModel.showMain}">

                <ImageView
                    android:layout_width="64px"
                    android:layout_height="64px"
                    android:src="@drawable/light_main"
                    binding:checkRes="@{R.drawable.light_main}"
                    binding:garyRes="@{R.drawable.gary_main}"
                    binding:realState="@{viewModel.showState}"
                    binding:stateType="@{1}" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="首页"
                    android:textColor="@color/white"
                    android:textSize="32px"
                    binding:realState="@{viewModel.showState}"
                    binding:stateType="@{1}" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                binding:onClickCommand="@{viewModel.showSupport}">

                <ImageView
                    android:layout_width="64px"
                    android:layout_height="64px"
                    android:src="@drawable/gary_zc"
                    binding:checkRes="@{R.drawable.light_zc}"
                    binding:garyRes="@{R.drawable.gary_zc}"
                    binding:realState="@{viewModel.showState}"
                    binding:stateType="@{2}" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="技术支持"
                    android:textColor="#F7F7F7"
                    android:textSize="32px"
                    binding:realState="@{viewModel.showState}"
                    binding:stateType="@{2}" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</layout>