<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".aioui.main.MainActivity">

    <data>

        <variable
            name="viewModel"
            type="com.goldze.mvvmhabit.aioui.main.fragment.MainFgViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_small_log"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/small_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_small_log"
            android:gravity="center"
            android:text="心理自助服务一体机"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


        <com.stx.xhb.androidx.XBanner
            android:id="@+id/xbanner"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="50dp"
            app:AutoPlayTime="3000"
            app:isShowIndicatorOnlyOne="true"
            app:isShowNumberIndicator="true"
            app:pageChangeDuration="800"
            app:pointsContainerBackground="#44aaaaaa"
            app:pointsPosition="RIGHT"
            app:tipTextSize="12sp" />


        <LinearLayout
            android:layout_marginTop="18dp"
            android:id="@+id/ll_gonggao"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/xbanner"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#f1f5fe"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            binding:onClickCommand="@{viewModel.gotoGonggao}">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/gonggao" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@{String.valueOf(viewModel.gonggao.value)}"
                android:textColor="#3359e8"
                android:textSize="16sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/rl_button"
            android:layout_below="@id/ll_gonggao"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:background="@color/black"
            binding:onClickCommand="@{viewModel.gotoScan}" />

        <RelativeLayout
            android:id="@+id/rl_button"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="180dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:id="@+id/iv_foucs"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:padding="10dp"
                android:src="@drawable/hearttest"
                binding:onClickCommand="@{viewModel.gotoTest}" />

            <ImageView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:src="@drawable/heartclass"
                binding:onClickCommand="@{viewModel.gotoClass}" />

            <ImageView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_alignParentEnd="true"
                android:padding="10dp"
                android:src="@drawable/heartkonws"
                binding:onClickCommand="@{viewModel.gotoKnows}" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:padding="10dp"
                android:src="@drawable/relax"
                binding:onClickCommand="@{viewModel.gotoRelax}" />

            <ImageView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:src="@drawable/kepu"
                binding:onClickCommand="@{viewModel.gotoKepu}" />

            <ImageView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_alignParentEnd="true"
                android:padding="10dp"
                android:src="@drawable/zixun"
                binding:onClickCommand="@{viewModel.gotoZixun}" />

        </RelativeLayout>


    </RelativeLayout>
</layout>