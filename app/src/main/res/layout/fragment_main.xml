<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".aioui.main.MainActivity">

    <data>

        <variable
            name="viewModel"
            type="com.goldze.mvvmhabit.aioui.main.fragment.MainFgViewModel" />
    </data>

    <RelativeLayout
        android:id="@+id/rl_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/ll_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50px"
            android:layout_marginBottom="50px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_small_log"
                android:layout_width="80px"
                android:layout_height="80px"
                android:src="@drawable/mini_logo" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:gravity="center"
                android:text="心理自助服务一体机"
                android:textColor="@color/white"
                android:textSize="48px"
                android:textStyle="bold" />

        </LinearLayout>

        <com.goldze.mvvmhabit.ui.corner.ShadowFrameLayout
            android:id="@+id/sfl"
            android:layout_width="1000px"
            android:layout_height="400px"
            android:layout_below="@id/ll_top"
            android:layout_marginHorizontal="40px"
            android:layout_marginRight="10dp"
            app:sl_cornerRadius="10px">

            <com.stx.xhb.androidx.XBanner
                android:id="@+id/xbanner"
                android:layout_width="1000px"
                android:layout_height="400px"
                android:gravity="center_horizontal"
                app:AutoPlayTime="3000"
                app:isShowIndicatorOnlyOne="true"
                app:isShowNumberIndicator="false"
                app:pageChangeDuration="800"
                app:pointsContainerBackground="#00000000"
                app:pointsPosition="CENTER"
                app:tipTextSize="12sp" />

        </com.goldze.mvvmhabit.ui.corner.ShadowFrameLayout>

        <LinearLayout
            android:id="@+id/ll_gonggao"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_below="@id/sfl"
            android:layout_marginHorizontal="40px"
            android:layout_marginTop="40px"
            android:background="@drawable/gonggao_back_ground"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            binding:onClickCommand="@{viewModel.gotoGonggao}">

            <ImageView
                android:layout_width="40px"
                android:layout_height="40px"
                android:layout_marginLeft="14px"
                android:src="@drawable/gonggao_white" />

            <TextView
                android:id="@+id/tv_gonggao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16px"
                android:text="暂无公告"
                android:textColor="#ffffff"
                android:textSize="40px"
                android:visibility="visible" />

            <com.brioal.adtextviewlib.view.ADTextView
                android:id="@+id/ad_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16px"
                android:textColor="#ffffff"
                android:textSize="40px"
                android:visibility="gone" />
        </LinearLayout>

        <ImageView
            android:layout_width="1050px"
            android:layout_height="280px"
            android:layout_above="@id/rl_button"
            android:layout_below="@id/ll_gonggao"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="15px"
            android:src="@drawable/scan"
            binding:onClickCommand="@{viewModel.gotoScan}" />

        <RelativeLayout
            android:id="@+id/rl_button"
            android:layout_width="match_parent"
            android:layout_height="290px"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="40px"
            android:layout_marginBottom="568px"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_foucs"
                android:layout_width="300px"
                android:layout_height="300px"
                android:src="@drawable/hearttest"
                binding:onClickCommand="@{viewModel.gotoTest}" />

            <ImageView
                android:layout_width="300px"
                android:layout_height="300px"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="50px"
                android:src="@drawable/heartclass"
                binding:onClickCommand="@{viewModel.gotoClass}" />

            <ImageView
                android:layout_width="300px"
                android:layout_height="300px"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="50px"
                android:src="@drawable/heartkonws"
                binding:onClickCommand="@{viewModel.gotoKnows}" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300px"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="40px"
            android:layout_marginBottom="218px"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="300px"
                android:layout_height="300px"
                android:src="@drawable/relax"
                binding:onClickCommand="@{viewModel.gotoRelax}" />

            <ImageView
                android:layout_width="300px"
                android:layout_height="300px"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="50px"
                android:src="@drawable/kepu"
                binding:onClickCommand="@{viewModel.gotoKepu}" />

            <ImageView
                android:layout_width="300px"
                android:layout_height="300px"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="50px"
                android:src="@drawable/zixun"
                binding:onClickCommand="@{viewModel.gotoZixun}" />

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#aa333333"
            android:clickable="true"
            android:visibility="invisible"
            binding:isVisible="@{viewModel.showEditCode}" />

        <LinearLayout
            android:layout_width="600px"
            android:layout_height="700px"
            android:layout_centerInParent="true"
            android:background="@drawable/input_code_heard"
            android:orientation="vertical"
            android:visibility="invisible"
            binding:isVisible="@{viewModel.showEditCode}">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="360px"
                android:gravity="center"
                android:text="输入激活码"
                android:textColor="@color/text_black"
                android:textSize="40px"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50px">

                <TextView
                    android:id="@+id/tv_code"
                    android:layout_width="wrap_content"
                    android:layout_height="50px"
                    android:text="激活码："
                    android:textColor="@color/text_black"
                    android:textSize="32px"
                    android:textStyle="normal" />

                <ImageView
                    android:layout_width="240px"
                    android:layout_height="50px"
                    android:layout_marginLeft="20px"
                    android:layout_toRightOf="@id/tv_code"
                    android:background="@drawable/shape_stroke_gary" />

                <EditText
                    android:id="@+id/et_code"
                    android:layout_width="240px"
                    android:layout_height="50px"
                    android:layout_marginLeft="20px"
                    android:layout_toRightOf="@id/tv_code"
                    android:background="@null"
                    android:textSize="32px" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_enter"
                style="@style/blue_button"
                android:layout_width="160px"
                android:layout_height="70px"
                android:layout_gravity="center"
                android:layout_marginTop="50px"
                android:text="确定"
                android:textSize="36px" />
        </LinearLayout>
    </RelativeLayout>
</layout>