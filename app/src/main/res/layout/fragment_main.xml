<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".aioui.main.MainActivity">

    <data>

        <variable
            name="viewModel"
            type="com.goldze.mvvmhabit.aioui.main.fragment.MainFgViewModel" />
    </data>

    <RelativeLayout
        android:id="@+id/rl_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ImageView
            android:layout_marginTop="14px"
            android:id="@+id/iv_small_log"
            android:layout_width="120px"
            android:layout_height="80px"
            android:layout_marginLeft="10dp"
            android:src="@drawable/small_logo" />

        <TextView
            android:layout_marginTop="14px"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="80px"
            android:layout_marginLeft="@dimen/content_padding"
            android:layout_toRightOf="@id/iv_small_log"
            android:gravity="center"
            android:text="心理自助服务一体机"
            android:textColor="@color/black"
            android:textSize="58px"
            android:textStyle="bold" />


        <com.stx.xhb.androidx.XBanner
            android:id="@+id/xbanner"
            android:layout_width="1054px"
            android:layout_height="414px"
            android:layout_marginTop="108px"
            android:gravity="center_horizontal"
            app:AutoPlayTime="3000"
            app:isShowIndicatorOnlyOne="true"
            app:isShowNumberIndicator="true"
            app:pageChangeDuration="800"
            app:pointsContainerBackground="#44aaaaaa"
            app:pointsPosition="RIGHT"
            app:tipTextSize="12sp" />


        <LinearLayout
            android:id="@+id/ll_gonggao"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_below="@id/xbanner"
            android:layout_marginLeft="@dimen/content_padding"
            android:layout_marginTop="13px"
            android:layout_marginRight="@dimen/content_padding"
            android:background="#f1f5fe"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            binding:onClickCommand="@{viewModel.gotoGonggao}">

            <ImageView
                android:layout_width="30px"
                android:layout_height="30px"
                android:layout_marginLeft="8dp"
                android:src="@drawable/gonggao" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@{String.valueOf(viewModel.gonggao.value)}"
                android:textColor="#3359e8"
                android:textSize="40px" />
        </LinearLayout>

        <ImageView
            android:layout_width="1000px"
            android:layout_height="280px"
            android:layout_above="@id/rl_button"
            android:layout_below="@id/ll_gonggao"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/scan"
            binding:onClickCommand="@{viewModel.gotoScan}" />

        <RelativeLayout
            android:id="@+id/rl_button"
            android:layout_width="match_parent"
            android:layout_height="310px"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="390px"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/content_padding"
            android:paddingRight="@dimen/content_padding">

            <ImageView
                android:id="@+id/iv_foucs"
                android:layout_width="310px"
                android:layout_height="310px"
                android:src="@drawable/hearttest"
                binding:onClickCommand="@{viewModel.gotoTest}" />

            <ImageView
                android:layout_width="310px"
                android:layout_height="310px"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="35px"
                android:src="@drawable/heartclass"
                binding:onClickCommand="@{viewModel.gotoClass}" />

            <ImageView
                android:layout_width="310px"
                android:layout_height="310px"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="35px"
                android:src="@drawable/heartkonws"
                binding:onClickCommand="@{viewModel.gotoKnows}" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="310px"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40px"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/content_padding"
            android:paddingRight="@dimen/content_padding">

            <ImageView
                android:layout_width="310px"
                android:layout_height="310px"
                android:src="@drawable/relax"
                binding:onClickCommand="@{viewModel.gotoRelax}" />

            <ImageView
                android:layout_width="310px"
                android:layout_height="310px"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="35px"
                android:src="@drawable/kepu"
                binding:onClickCommand="@{viewModel.gotoKepu}" />

            <ImageView
                android:layout_width="310px"
                android:layout_height="310px"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="35px"
                android:src="@drawable/zixun"
                binding:onClickCommand="@{viewModel.gotoZixun}" />

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#aa333333"
            android:clickable="true"
            android:visibility="invisible"
            binding:isVisible="@{viewModel.showEditCode}" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="350dp"
            android:layout_centerInParent="true"
            android:background="@drawable/input_code_heard"
            android:orientation="vertical"
            android:visibility="invisible"
            binding:isVisible="@{viewModel.showEditCode}">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="180dp"
                android:gravity="center"
                android:text="输入激活码"
                android:textColor="@color/text_black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp">

                <TextView
                    android:id="@+id/tv_code"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="激活码："
                    android:textColor="@color/text_black"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/tv_code"
                    android:background="@drawable/shape_stroke_gary" />

                <EditText
                    android:id="@+id/et_code"
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/tv_code"
                    android:background="@null"
                    android:textSize="16sp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_enter"
                style="@style/blue_button"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:text="确定"
                android:textSize="18sp" />
        </LinearLayout>
    </RelativeLayout>
</layout>