<?xml version="1.0" encoding="utf-8"?>
<layout>


    <data>

        <import type="com.goldze.mvvmhabit.aioui.relax.music.viewmodel.MusicRvItemViewModel" />

        <variable
            name="viewModel"
            type="MusicRvItemViewModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:binding="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingHorizontal="13dp"
        binding:onClickCommand="@{viewModel.itemClick}"
        binding:onLongClickCommand="@{viewModel.itemLongClick}">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.goldze.mvvmhabit.ui.corner.ShadowFrameLayout
                android:layout_width="133dp"
                android:layout_height="100dp"
                app:sl_cornerRadius="4dp">

                <ImageView
                    android:id="@+id/coverImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@{viewModel.musicIcon}" />
            </com.goldze.mvvmhabit.ui.corner.ShadowFrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginHorizontal="6dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="top|start"
                    android:text="心理图库"
                    android:textColor="@color/text_color_title"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/desc"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:layout_gravity="bottom|start"
                    android:text="专业视角，深度思考"
                    android:textColor="@color/text_color_subtitle"
                    android:textSize="12sp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="100dp">

                <ImageView
                    android:id="@+id/control_image"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_horizontal|bottom"
                    android:src="@{viewModel.playIcon}" />
            </FrameLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:background="@color/gray" />
    </LinearLayout>
</layout>