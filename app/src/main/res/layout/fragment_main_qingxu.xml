<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:orientation="vertical"
    >

    <com.goldze.mvvmhabit.aioui.scan.qingxu.camera.CameraPreview2
        android:id="@+id/camera_preview"
        android:layout_width="480px"
        android:layout_height="640px"
        android:layout_gravity="center_horizontal"/>
    <SurfaceView
        android:id="@+id/surfaceViewOverlap"
        android:layout_width="480px"
        android:layout_height="640px"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="650px"
        android:layout_marginLeft="36dp"
        android:background="#212121"
        android:gravity="center"
        android:text=""
        android:textColor="@color/white"
        android:visibility="visible" />


    <EditText
        android:id="@+id/et_registername"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="780px"
        android:gravity="center"
        android:hint="enter name" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="780px"
        android:gravity="center"
        android:text="注册人脸" />
    <TextView
        android:layout_marginTop="950px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_content"/>

</FrameLayout>
