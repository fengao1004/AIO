<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".aioui.main.MainActivity">

    <data>

        <variable
            name="viewModel"
            type="com.goldze.mvvmhabit.aioui.test.result.FunnyResultModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.goldze.mvvmhabit.ui.base.widget.BaseRootView
            android:id="@+id/br_root_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/titleBar_height" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/titleBar_height"
            android:orientation="vertical"
            android:paddingHorizontal="60px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="40px"
                android:text="@{String.valueOf(viewModel.title.value)}"
                android:textColor="@color/app_blue"
                android:textSize="48px"
                android:textStyle="bold" />

            <TextView
                android:lineSpacingExtra="10px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="60px"
                android:text="@{String.valueOf(viewModel.result.value)}"
                android:textColor="@color/text_black"
                android:textSize="40px" />

        </LinearLayout>


        <TextView
            style="@style/blue_button"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="148px"
            android:text="再测试一次"
            binding:onClickCommand="@{viewModel.again}" />

    </FrameLayout>
</layout>