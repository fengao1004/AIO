<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".aioui.main.MainActivity">

    <data>

        <variable
            name="viewModel"
            type="com.goldze.mvvmhabit.aioui.test.result.FunnyResultModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.goldze.mvvmhabit.ui.base.widget.BaseRootView
            android:id="@+id/br_root_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/titleBar_height" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="118dp"
            android:text="@{String.valueOf(viewModel.result.value)}"
            android:textColor="@color/app_blue"
            android:textSize="48px"
            android:textStyle="bold" />

        <TextView
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="148px"
            style="@style/blue_button"
            binding:onClickCommand="@{viewModel.again}"
            android:text="再测试一次"/>

    </FrameLayout>
</layout>