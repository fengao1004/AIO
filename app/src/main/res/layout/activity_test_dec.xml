<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.goldze.mvvmhabit.aioui.test.dec.TestDecModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.goldze.mvvmhabit.ui.base.widget.BaseRootView
            android:id="@+id/br_root_view"
            android:layout_width="match_parent"
            android:layout_height="98dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="98dp"
            binding:url="@{viewModel.url}" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="298dp"
            android:padding="10dp"
            android:text="@{viewModel.detail.data.scaVo.name}"
            android:textColor="@color/text_black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="348dp"
            android:padding="10dp"
            android:text="@{viewModel.detail.data.scaVo.brief}"
            android:textColor="@color/text_gray"
            android:textSize="12sp" />

        <TextView
            style="@style/blue_button"
            android:layout_gravity="bottom"
            android:layout_marginBottom="80dp"
            android:text="开始评测"
            binding:onClickCommand="@{viewModel.startTest}" />


    </FrameLayout>
</layout>