<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".aioui.main.MainActivity">

    <data>

        <variable
            name="viewModel"
            type="com.goldze.mvvmhabit.aioui.relax.RelaxFragmentModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/activity_background_color"
        android:orientation="vertical">

        <!--第一个-->
        <LinearLayout
            android:id="@+id/music_relax"
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:layout_marginHorizontal="13dp"
            android:layout_marginTop="13dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <com.goldze.mvvmhabit.ui.corner.ShadowFrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="13dp"
                android:layout_marginVertical="22dp"
                app:sl_cornerRadius="8dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/music_relax" />
            </com.goldze.mvvmhabit.ui.corner.ShadowFrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginHorizontal="13dp"
                android:layout_marginVertical="22dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|start"
                    android:text="音乐放松"
                    android:textColor="@color/text_color_title"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|start"
                    android:text="聆听自然，享受此刻的静谧"
                    android:textColor="@color/text_color_subtitle"
                    android:textSize="12sp" />
            </FrameLayout>
        </LinearLayout>
        <!--第二个-->
        <LinearLayout
            android:id="@+id/mind_relax"
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:layout_marginHorizontal="13dp"
            android:layout_marginTop="13dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <com.goldze.mvvmhabit.ui.corner.ShadowFrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="13dp"
                android:layout_marginVertical="22dp"
                app:sl_cornerRadius="8dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/mind_relax" />
            </com.goldze.mvvmhabit.ui.corner.ShadowFrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginHorizontal="13dp"
                android:layout_marginVertical="22dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|start"
                    android:text="心理短片"
                    android:textColor="@color/text_color_title"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|start"
                    android:text="跟随指引，选择自己"
                    android:textColor="@color/text_color_subtitle"
                    android:textSize="12sp" />
            </FrameLayout>
        </LinearLayout>
        <!--第三个-->
        <LinearLayout
            android:id="@+id/mind_gallery"
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:layout_marginHorizontal="13dp"
            android:layout_marginTop="13dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <com.goldze.mvvmhabit.ui.corner.ShadowFrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="13dp"
                android:layout_marginVertical="22dp"
                app:sl_cornerRadius="8dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/mind_gallery" />
            </com.goldze.mvvmhabit.ui.corner.ShadowFrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginHorizontal="13dp"
                android:layout_marginVertical="22dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|start"
                    android:text="心理图库"
                    android:textColor="@color/text_color_title"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|start"
                    android:text="专业视角，深度思考"
                    android:textColor="@color/text_color_subtitle"
                    android:textSize="12sp" />
            </FrameLayout>
        </LinearLayout>


    </LinearLayout>
</layout>